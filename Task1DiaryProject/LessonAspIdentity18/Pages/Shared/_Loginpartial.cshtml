@using Microsoft.AspNetCore.Identity;
@inject SignInManager<IdentityUser> signmanager;

<ul class="navbar-nav">
    @{
        if(signmanager.IsSignedIn(User))
        {
                <li class="nav-item" style="font-family: 'Poor Richard';">
                            Welcome to &nbsp; @User.Identity.Name
                            <img class="rounded-circle" src="~/img/diary.jpg" style="width: 50px; height: 50px;">
                </li>
                <li class="nav-item" style="font-family: 'Poor Richard';">
                            <form method="post" asp-page="/Logout" asp-route-returnUrl="@Url.Page("/")">
                                <button class="btn btn-link text-dark">Log Out</button>
                            </form>
                </li>
        }
        else
        {
                <h6 class="nav-item" style="font-family: 'Poor Richard';">
                           <a asp-page="/Login" class="nav-link text-dark">Log In</a>
                </h6>
                <h6 class="nav-item" style="font-family: 'Poor Richard';">
                            <a asp-page="/AddUser" class="nav-link text-dark">Create New Account</a>
                </h6>
        }
    }
</ul>